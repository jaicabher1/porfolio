import IconDjango from "./IconDjango.astro";
import IconPython from "./IconPython.astro";

import IconTypeScript from "./IconTypeScript.astro";

import IconHtml from "./IconHtml.astro";
import IconCss from "./IconCss.astro";
import IconReact from "./IconReact.astro";
import IconGit from "./IconGit.astro";
import IconGitHub from "./IconGtiHub.astro";
import IconStripe from "./IconStripe.astro";
import IconJavaScript from "./IconJavaScritp.astro";

import IconMongodb from "./IconMongodb.astro";
import IconNodeJs from "./IconNodeJs.astro";
import IconVite from "./IconVite.astro";
import IconVue from "./IconVue.astro";
import IconSpring from "./IconSpring.astro";
import IconTailwindCss from "./IconTailwindCss.astro";

export const ICONS: Record<string, (_props: Record<string, any>) => any> = {
  html: IconHtml,
  css: IconCss,
  javaScript: IconJavaScript,
  react: IconReact,
  astro: IconAstro,

  django: IconDjango,
  python: IconPython,

  typeScript: IconTypeScript,

  git: IconGit,
  github: IconGitHub,
  stripe: IconStripe,

  mongodb: IconMongodb,
  nodejs: IconNodeJs,
  vite: IconVite,
  vuejs: IconVue,
  springBoot: IconSpring,
  tailwindCss: IconTailwindCss,
  // add new icons here <--
  // Make sure that when calling the icon the key is the same
  // "optional" in the IconKeys const file adds the icon key for when you call IconKeys.nameIcon
};

export function getIconComponent(iconName: string) {
  return ICONS[iconName] || null;
}
